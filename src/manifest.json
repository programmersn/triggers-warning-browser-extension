{
	"name": "Untrig",
	"version": "0.0.0",
	"description": "Makes watching streaming content relaxing, soothing and enjoyable again !",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"icons": {
		"96": "/icons/untrig-96.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"*://*/?o=*"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "/options.html"
	},
	"background": {
		"persistent": true,
		"scripts": [
			"/browser-polyfill.min.js",
			"/backgroundPopupState.js",
			"/backgroundSubtitlesFetcher.js",
			"backgroundContentMetadata.js"
		]
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"32": "/icons/untrig-32.png",
			"48": "/icons/untrig-48.png"
		},
		"default_title": "Untrig",
		"default_popup": "/popup.html"
	},
	
	"browser_specific_settings": {
		"gecko": {
		  "id": "addon@example.com"
		}
	  }
	
}